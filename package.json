{
  "name": "scotopia-backend",
  "version": "1.0.0",
  "description": "Demo backend for Scotopia that listens for HumidiFi deposit events and mints soulbound IOU tokens",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:mock": "cross-env MODE=mock node dist/server.js",
    "start:dev": "tsx watch src/server.ts",
    "dev:mock": "cross-env MODE=mock tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy:contract": "hardhat run scripts/deploy.ts --network testnet",
    "mint:demo": "tsx scripts/mint-demo.ts",
    "test:contract": "hardhat test"
  },
  "keywords": [
    "sbt",
    "soulbound",
    "humidifi",
    "deposit",
    "ethereum",
    "solana"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ethers": "^6.8.0",
    "@solana/web3.js": "^1.78.1",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "socket.io": "^4.5.4",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "better-sqlite3": "^9.2.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.13",
    "@types/node-cron": "^3.0.8",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.2.2",
    "tsx": "^3.13.0",
    "vitest": "^0.34.4",
    "hardhat": "^2.17.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@openzeppelin/contracts": "^5.0.0",
    "cross-env": "^7.0.3",
    "chai": "^4.3.7",
    "@types/chai": "^4.3.4"
  }
}

